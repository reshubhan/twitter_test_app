<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong> Users Follows:</strong></dt>
  <dd><%= link_to (@user.all_following.count), all_follows_user_path(@user) %></dd>
</dl>
</dl>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= puts @user.inspect+"rrrr"+current_user.inspect%>
  <% if @user.id == current_user.id%>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
    <%= link_to t('Follow Users'),
              users_path, :class => 'btn' %>
  <%end%>
  <%= link_to t('Tweet'),
              new_tweet_path, :class => 'btn' %>
  <%= link_to t('All Tweets'),
              all_tweets_users_path, :class => 'btn' %>
</div>
